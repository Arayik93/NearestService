<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="example.com.nearestservice.Fragments.AddServiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cast_expanded_controller_progress_text_color"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/AddFragmentServiceSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawSelectorOnTop="true"
            android:entries="@array/spinnerItems"
            />

        <EditText
            android:id="@+id/AddFragmentServiceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Name:"
            android:selectAllOnFocus="false"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/forEditTextHint"
            android:theme="@style/EditTextTheme"/>

        <EditText
            android:id="@+id/AddFragmentServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description:"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/forEditTextHint"
            android:theme="@style/EditTextTheme"/>

        <EditText
            android:id="@+id/AddFragmentServiceAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Address:"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/forEditTextHint"
            android:theme="@style/EditTextTheme"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/cast_expanded_controller_progress_text_color"
        >


        <Button
            android:id="@+id/button_save_activityAddService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/save"
            android:textAllCaps="false"/>


        <Button
            android:id="@+id/button_cancel_activityAddService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
